{{#each results}}
	<div class="col-md-6">
		<div class="panel panel-default">
		  <div class="panel-body text-center">
				<div class="col-md-4">
					<img class="poster img-thumbnail img-responsive" src="http://image.tmdb.org/t/p/w92/{{poster_path}}" alt="{{original_title}} poster">
					<span class="label label-info">Rating: {{vote_average}}</span>
				</div>
				<div class="col-md-8">
					<h1>{{original_title}}</h1>
				</div>
		  </div>
			<div class="panel-footer text-right">
				<button data-movie-id="{{id}}" type="button" class="movie-info btn btn-default" aria-label="Left Align">
					<span class="glyphicon glyphicon-info-sign" aria-hidden="true"></span>
					More information
				</button>
			</div>
		</div>
	</div>
{{/each}}
